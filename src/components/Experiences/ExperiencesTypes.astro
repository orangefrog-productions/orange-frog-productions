---
import { Image } from "astro:assets";
import "./experiencesTypes.scss";
---

<div class="experience-types">
  <div class="experience-types-wrappper">
    <div class="experience-types-title">
      <h1>
        {Astro.props.data.mainTitle}
      </h1>
    </div>
    {
      Astro.props.data.sections.map((section) => {
        return (
          <div id={`${section.sectionId}`} class="experience-type">
            <div class="experience-type-content">
              <div class="experience-type-content-title">
                <h2>{section.title}</h2>
              </div>
              <div
                class="experience-type-content-para"
                set:html={section.content}
              />
              <div class="experience-type-content-button">
                <a href={`${section.linkPage.uri}`}>{section.linkText}</a>
              </div>
            </div>
            <div class="experience-type-image">
              <div class="experience-type-image-wrapper">
                <Image
                  src={section.image.sourceUrl}
                  alt={section.image.altText}
                  width="1500"
                  height="1500"
                />
              </div>
            </div>
          </div>
        );
      })
    }
  </div>
</div>
