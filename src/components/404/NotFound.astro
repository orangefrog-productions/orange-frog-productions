---
import "./notFound.scss";
import Wrapper from "../shared/Wrapper.astro";
---

<div class="not-found">
  <Wrapper classes="not-found-wrapper">
    <div class="not-found-title">
      <h1>404 - Page Not Found!</h1>
    </div>
    <div class="not-found-content">
      <p>
        You have just found a page that doesn't exists, Please try going <a
          href="/">Home</a
        >
      </p>
    </div>
  </Wrapper>
</div>
