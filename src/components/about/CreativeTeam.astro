---
import { Image } from "astro:assets";
import Headline from "../shared/Headline.astro";
import Wrapper from "../shared/Wrapper.astro";
import "./creativeTeam.scss";
---

<div class="creative-team">
  <Wrapper>
    <div class="creative-team-title">
      <Headline ele="h2" hlstyle="two">Creative Team</Headline>
    </div>
    <div class="creative-team-list">
      {
        Astro.props.data.map((team) => {
          return (
            <div class="creative-team-list-item">
              <div class="creative-team-list-item-image">
                <Image
                  src={team.creativeTeam.image.sourceUrl}
                  alt={team.title}
                  width="1000"
                  height="500"
                />
              </div>
              <div class="creative-team-list-item-details">
                <h3>{team.title}</h3>
                <p>{team.creativeTeam.titlePosition}</p>
                <button type="button">Bio</button>
              </div>
            </div>
          );
        })
      }
    </div>
  </Wrapper>
</div>
