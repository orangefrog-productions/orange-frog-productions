---
import Headline from "../shared/Headline.astro";
import Wrapper from "../shared/Wrapper.astro";
import "./visionStatement.scss";
---

<div class="vision">
  <Wrapper classes="vision-wrapper">
    <div class="vision-title">
      <Headline ele="h2" hlstyle="four">
        {Astro.props.data.title}
      </Headline>
    </div>
    <div class="vision-statement" set:html={Astro.props.data.statement} />
  </Wrapper>
</div>
