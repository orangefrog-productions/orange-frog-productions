---
import { Image } from "astro:assets";
import Headline from "../shared/Headline.astro";
import Wrapper from "../shared/Wrapper.astro";
import "./givingBack.scss";
---

<div class="giving-back">
  <Wrapper>
    <div class="giving-back-title">
      <Headline ele="h2" hlstyle="four">{Astro.props.data.mainTitle}</Headline>
    </div>
    {
      Astro.props.data.logos.map((logo) => {
        return (
          <div class="giving-back-logo">
            <Image
              src={logo.logo.sourceUrl}
              alt={logo.logo.altText}
              width="500"
              height="500"
            />
          </div>
        );
      })
    }
  </Wrapper>
</div>
