---
import "./founder.scss";
import { Image } from "astro:assets";
import Button from "../shared/Button.astro";
// Images. //
import signature from "./assets/pierre-marleau.png";
import frog from "./assets/orange-frog.png";
import bubbles from "./assets/bubbles.png";
import quotesLeft from "./assets/quotes-left.png";
import quotesRight from "./assets/quotes-right.png";
---

<div class="founder" id="founder-component">
  <div class="bg-outline"></div>
  <div class="founder-wrap">
    <div class="founder-container">
      <span class="quote-left"
        ><Image
          src={quotesLeft}
          alt=""
          width={quotesLeft.width}
          densities={[1.5, 2]}
        /></span
      >
      <div class="founder-purple" set:html={Astro.props.data.bigPurple} />
      <span class="quote-right"
        ><Image
          src={quotesRight}
          alt=""
          width={quotesRight.width}
          densities={[1.5, 2]}
        /></span
      >
      <div class="founder-text" set:html={Astro.props.data.smallText} />
      <div class="founder-signature">
        <Image src={signature} alt="Pierre Marleau" width={747} height={318} />
        <p>CEO & Founder</p>
      </div>
      <div class="founder-link">
        <Button href={`${Astro.props.data.buttonLink.uri}`}
          >{Astro.props.data.buttonText}</Button
        >
      </div>
    </div>

    <div class="founder-frog">
      <Image
        src={frog}
        alt="Orange Frog"
        width={bubbles.width}
        densities={[1.5, 2]}
      />
    </div>
    <div class="founder-bubbles founder-bubbles-top">
      <Image
        src={bubbles}
        alt="Bubbles"
        width={bubbles.width}
        densities={[1.5, 2]}
      />
    </div>
    <div class="founder-bubbles founder-bubbles-bot">
      <Image
        src={bubbles}
        alt="Bubbles"
        width={bubbles.width}
        densities={[1.5, 2]}
      />
    </div>
  </div>
</div>
