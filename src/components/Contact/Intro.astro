---
import { Image } from "astro:assets";
import Wrapper from "../shared/Wrapper.astro";
import "./intro.scss";

import ribbon from "./assets/ribbon.png";
import Headline from "../shared/Headline.astro";
---

<div class="services-intro">
  <Wrapper wrapType="stand" classes="services-intro-wrapper">
    <div class="services-intro-title">
      <Headline ele="h1" hlstyle="one">{Astro.props.data.mainTitle}</Headline>
    </div>
    <div class="services-intro-content">
      <div class="services-intro-content-frog">
        <div class="services-intro-content-glow"></div>
        <Image
          src={Astro.props.logo.sourceUrl}
          alt="Orange Frog Productions Inc."
          inferSize={true}
        />
      </div>
      <div
        class="services-intro-content-para base-wysiwyg"
        set:html={Astro.props.data.mainContent}
      />
    </div>
    <div class="services-intro-ribbon">
      <div class="services-intro-ribbon-inner">
        <Image src={ribbon} alt="ribbon" inferSize={true} />
      </div>
    </div>
  </Wrapper>
</div>
