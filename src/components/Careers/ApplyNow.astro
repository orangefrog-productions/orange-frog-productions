---
import { Image } from "astro:assets";
import Wrapper from "../shared/Wrapper.astro";
import Headline from "../shared/Headline.astro";
import Button from "../shared/Button.astro";
import "./applyNow.scss";
---

<div class="apply-now">
  <Wrapper>
    <div class="apply-now-image">
      <div>
        <Image
          src={Astro.props.data.image.sourceUrl}
          alt={Astro.props.data.image.altText}
          width="800"
          height="1000"
        />
      </div>
    </div>
    <div class="apply-now-content">
      <div class="apply-now-content-title">
        <Headline ele="h2" hlstyle="two">{Astro.props.data.title}</Headline>
      </div>
      <div
        class="apply-now-content-wysiwyg base-wysiwyg"
        set:html={Astro.props.data.content}
      />
      <div class="apply-now-content-button">
        <Button href={`mailto: ${Astro.props.data.buttonEmail}`}
          >{Astro.props.data.buttonText}</Button
        >
      </div>
    </div>
  </Wrapper>
</div>
