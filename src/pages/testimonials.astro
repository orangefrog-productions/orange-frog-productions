---
import Layout from "../layouts/Layout.astro";
import IntroTitle from "../components/Testimonials/IntroTitle.astro";
import TestGrid from "../components/Testimonials/TestGrid.astro";

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
			query testimonialsPageQuery {
				page(id: "/testimonials", idType: URI) {
					title
                    testimonialsPage {
                        testimonialsGridComponent {
                            gridItems {
                                type
                                video {
                                    mediaItemUrl
                                }
                                testimonial {
                                    ... on Testimonial {
                                    title
                                    testimonialContent {
                                        testimonialQuote
                                        testimonialCompany
                                    }
                                    }
                                }
                                image {
                                    altText
                                    sourceUrl
                                }
                            }
                        }
                    }
				}
			}
		`,
  }),
});

const {
  data: { page },
} = await response.json();
const title = page.seo?.title ? page.seo?.title : null;
const description = page.seo?.metaDesc ? page.seo?.metaDesc : null;
const metaImg = page.featuredImage?.node?.sourceUrl
  ? page.featuredImage?.node?.sourceUrl
  : null;
---

<Layout metaTitle={title} metaDescription={description} metaImg={metaImg}>
  <IntroTitle title={page.title} />
  <TestGrid data={page.testimonialsPage.testimonialsGridComponent.gridItems} />
</Layout>
