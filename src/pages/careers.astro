---
import Layout from "../layouts/Layout.astro";
import Intro from "../components/Careers/Intro.astro";
import ImageRow from "../components/Careers/ImageRow.astro";
import ApplyNow from "../components/Careers/ApplyNow.astro";

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
			query careersPageQuery {
				page(id: "/careers", idType: URI) {
					title
          careersPage {

            introComponent {
              mainContent
              mainTitle
            }

            imageRowComponent {
              images {
                image {
                  altText
                  sourceUrl
                }
              }
            }

            applyNowComponent {
              buttonEmail
              buttonText
              content
              title
              image {
                altText
                sourceUrl
              }
            }
          }
				}

        logoOptions {
                logoOptions {
                    frogLogo {
                        altText
                        sourceUrl
                    }
                }
            }
			}
		`,
  }),
});

const {
  data: { page, logoOptions },
} = await response.json();
const title = page.seo?.title ? page.seo?.title : null;
const description = page.seo?.metaDesc ? page.seo?.metaDesc : null;
const metaImg = page.featuredImage?.node?.sourceUrl
  ? page.featuredImage?.node?.sourceUrl
  : null;
---

<Layout metaTitle={title} metaDescription={description} metaImg={metaImg}>
  <Intro
    data={page.careersPage.introComponent}
    logo={logoOptions.logoOptions.frogLogo}
  />
  <ImageRow data={page.careersPage.imageRowComponent} />
  <ApplyNow data={page.careersPage.applyNowComponent} />
</Layout>
