---
import Layout from "../layouts/Layout.astro";
import Intro from "../components/about/Intro.astro";
import DesignSlider from "../components/about/DesignSlider.jsx";
const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
        query aboutPageQuery {
            page(id: "/about", idType: URI) {
                aboutPage {
                    introComponent {
                        mainCallout
                        mainContent
                        mainTitle
                    }
                    designSliderComponent {
                        slideImages {
                        slideImage {
                            altText
                            sourceUrl
                            }
                        }
                    }
                }
            }


            logoOptions {
                logoOptions {
                    frogLogo {
                        altText
                        sourceUrl
                    }
                }
            }

		}
		`,
  }),
});

const {
  data: { page, logoOptions },
} = await response.json();

const title = page.seo?.title ? page.seo?.title : null;
const description = page.seo?.metaDesc ? page.seo?.metaDesc : null;
const metaImg = page.featuredImage?.node?.sourceUrl
  ? page.featuredImage?.node?.sourceUrl
  : null;

// console.log("Events Page: ", page);
---

<Layout metaTitle={title} metaDescription={description} metaImg={metaImg}>
  <Intro
    data={page.aboutPage.introComponent}
    logo={logoOptions.logoOptions.frogLogo}
  />
  <DesignSlider
    client:only="react"
    data={page.aboutPage.designSliderComponent}
  />
</Layout>
