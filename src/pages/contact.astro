---
import Layout from "../layouts/Layout.astro";
import Intro from "../components/Contact/Intro.astro";
import ContactForm from "../components/Contact/ContactForm.jsx";
import RentalLocation from "../components/Contact/RentalLocation.astro";

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
			query contactPageQuery {
				page(id: "/contact", idType: URI) {
					title
          contactPage {
            introComponent {
              mainContent
              mainTitle
            }

            contactFormComponent {
              backgroundImage {
                altText
                sourceUrl
              }
            }

            rentalLocationComponent {
              locationContent
              locationContentHoursPhone
              locationGoogleUrl
              locationTitle
              locationMap {
                altText
                sourceUrl
              }
              rentalButtonLink
              rentalButtonText
              rentalContent
              rentalTitle
            }
          }
				}


        logoOptions {
            logoOptions {
                frogLogo {
                    altText
                    sourceUrl
                }
            }
        }


			}
		`,
  }),
});

const {
  data: { page, logoOptions },
} = await response.json();
const title = page.seo?.title ? page.seo?.title : null;
const description = page.seo?.metaDesc ? page.seo?.metaDesc : null;
const metaImg = page.featuredImage?.node?.sourceUrl
  ? page.featuredImage?.node?.sourceUrl
  : null;
---

<Layout metaTitle={title} metaDescription={description} metaImg={metaImg}>
  <Intro
    data={page.contactPage.introComponent}
    logo={logoOptions.logoOptions.frogLogo}
  />
  <ContactForm
    client:only="react"
    data={page.contactPage.contactFormComponent}
  />
  <RentalLocation data={page.contactPage.rentalLocationComponent} />
</Layout>
